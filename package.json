{
  "private": true,
  "name": "ka-mensa-api",
  "version": "0.0.0",
  "description": "Karlsruhe (KIT) Mensa API server",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "start": "npm run build && npm run production",
    "build": "node -e \"fs.rmSync('./dist',{force:true,recursive:true})\" && tsc",
    "production": "node dist/server.js",
    "lint": "tsc --noEmit -p tsconfig.lint.json && eslint --ignore-path .gitignore .",
    "lint-fix": "tsc --noEmit -p tsconfig.lint.json && eslint --fix --ignore-path .gitignore .",
    "coverage": "c8 --reporter=lcov --reporter=text --all --src=src npm test",
    "test": "mocha --recursive \"test/**/*.test.*\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meyfa/ka-mensa-api.git"
  },
  "keywords": [
    "karlsruhe",
    "mensa",
    "canteen",
    "api-server"
  ],
  "author": "Fabian Meyer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/meyfa/ka-mensa-api/issues"
  },
  "homepage": "https://github.com/meyfa/ka-mensa-api",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@fastify/cors": "8.2.1",
    "fastify": "4.15.0",
    "fs-adapters": "6.2.0",
    "group-items": "2.2.1",
    "ka-mensa-fetch": "3.2.0",
    "moment": "2.29.4",
    "ms": "2.1.3",
    "omniwheel": "0.4.0",
    "winston": "3.8.2"
  },
  "devDependencies": {
    "@meyfa/eslint-config": "3.0.1",
    "@types/mocha": "10.0.1",
    "@types/ms": "0.7.31",
    "@types/node": "18.15.11",
    "c8": "7.13.0",
    "eslint": "8.39.0",
    "eslint-plugin-jsdoc": "43.0.6",
    "mocha": "10.2.0",
    "ts-node": "10.9.1",
    "typescript": "5.0.4"
  }
}
